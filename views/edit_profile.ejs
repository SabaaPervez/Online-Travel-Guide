                <h1>Edit Profile</h1>
            </div>
        </div>
    </div>
    

  <section class="container mt-5">
    <div class="row">
        <div class="col-8"> 
            <div class="container" style="margin-top: 5%; color: white">
                <div class="form">
                    <div class="tab-content">
                        <div id="signup" class="form-group">
                            <h1>My Profile </h1>
                            <form action="/" method="post">
                                <div class="row mb-4">
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="First name">
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="Last name">
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <input class="signup-field form-control" type="email" required autocomplete="off" placeholder="Email Address"/>
                                </div>
                                <div class="row mb-4">
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="Country">
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="City">
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <input class="form-control" type="date" name="birthday">
                                </div>
                                <div class="mb-4">
                                    <div>
                                        <input type="radio" id="male" name="gander">
                                        <label for="male">Male</label>
                                        <input class="ml-3" type="radio" id="female" name="gander">
                                        <label for="female">Female</label>
                                        <input class="ml-3" type="radio" id="other" name="gander">
                                        <label for="other">Other</label>
                                      </div>    
                                </div>

                                <div class="mb-4">
                                    <input class="form-control" type="password" required autocomplete="off" placeholder="Password"/>
                                </div>
                                <div class="mb-4">
                                    <input class="form-control" type="password" required autocomplete="off" placeholder="Confom Password"/>
                                </div>                                
                                <div class="row">
                                    <div class="col">
                                        <a href="/user_profile" class="btn btn-success btn-block" type="submit">Confirm</a>
                                    </div>
                                    <div class="col">
                                        <a href="/home" class="btn btn-danger btn-block " type="submit">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div><!-- tab-content -->    
                </div>
                <!-- /form -->
    
            </div>
        </div>

        <div class="col-4 text-light" style="padding-top: 100px;">
          <div class="d-flex justify-content-center">
            <div class="d-flex flex-column">
              <p class="h1">Profile Picture</p>
              <div class="d-flex justify-content-center">
                <img src="imgs/user.png" alt="">
              </div>
              <div class="d-flex justify-content-center">
                <a class="text-light h4" href="#">Edit</a>
              </div>
            </div>
          </div>
        </div>

    </div>
  </section>


